<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Haja Mohideen">
    <title>SG Car Parks - An easy tool to check your nearby parking spaces</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.css" />
    <link rel="stylesheet" href="~/css/leaflet.awesome-markers.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-geosearch@3.3.2/dist/geosearch.css" />
    <link rel="stylesheet" href="~/css/MarkerCluster.css" />
    <link rel="stylesheet" href="~/css/MarkerCluster.Default.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
    .number-icon
    {
        background-image: url("images/number-marker-icon.png");
        text-align:center;
        color:White;    
    }   
</style>
</head>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <div class="container">
            <div class="row mt-4">
                <div class="col-12 col-sm-6">
                    <span class="title-text">SG Car Parks</span>
                </div>
                <hr/>
                <div class="col-12 col-sm-6">
                    <div class="input-group">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="chkAvailableLots" onchange="ShowAllOrAvailable();" checked>
                            <label class="form-check-label" for="chkAvailableLots">Show only available lots</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    @RenderBody()
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Created by Haja Mohideen. Attributions & license <a data-bs-toggle="modal" data-bs-target="#AttributionModal">here</a>.</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
